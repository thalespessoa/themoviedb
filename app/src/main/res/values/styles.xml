<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBaseDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="BigTitleStyle" parent="TitleStyle">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBaseDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBaseMid</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="VoteStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="VoteBigStyle" parent="VoteStyle">
        <item name="android:textSize">55sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>
